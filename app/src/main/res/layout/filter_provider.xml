<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/back"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/text_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Фильтр"
            android:textSize="20sp"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@id/chevron"
            app:layout_constraintStart_toEndOf="@id/chevron"
            app:layout_constraintBottom_toBottomOf="@id/chevron"/>

        <ImageView
            android:id="@+id/chevron"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_chevron"
            android:backgroundTint="@color/textColor"
            android:rotation="90"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="16dp"
        android:text="Очистить"
        android:textColor="@color/mainColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/back" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/back">

        <CheckBox
            android:id="@+id/provider1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adidas Uzbekistsn"
            android:buttonTint="@color/mainColor"
            android:layoutDirection="rtl"
            android:button="@drawable/check_box"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_line"
            android:layout_marginStart="16dp"/>

        <CheckBox
            android:id="@+id/provider2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nike Uzbekistan"
            android:buttonTint="@color/mainColor"
            android:layoutDirection="rtl"
            android:drawablePadding="12dp"
            android:button="@drawable/check_box"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_line"
            android:layout_marginStart="16dp"/>

        <CheckBox
            android:id="@+id/provider3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vip Brand"
            android:buttonTint="@color/mainColor"
            android:layoutDirection="rtl"
            android:drawablePadding="12dp"
            android:button="@drawable/check_box"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_line"
            android:layout_marginStart="16dp"/>

        <CheckBox
            android:id="@+id/provider4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Di-sport"
            android:buttonTint="@color/mainColor"
            android:layoutDirection="rtl"
            android:drawablePadding="12dp"
            android:button="@drawable/check_box"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_line"
            android:layout_marginStart="16dp"/>

        <CheckBox
            android:id="@+id/provider5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kids shop"
            android:buttonTint="@color/mainColor"
            android:layoutDirection="rtl"
            android:drawablePadding="12dp"
            android:button="@drawable/check_box"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_line"
            android:layout_marginStart="16dp"/>

    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/get_sms_button"
        android:text="Применить"
        android:textAllCaps="false"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>