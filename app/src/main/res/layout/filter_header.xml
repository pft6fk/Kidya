<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Фильтр"
        android:textSize="20sp"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="@id/chevron"
        app:layout_constraintStart_toEndOf="@id/chevron"
        app:layout_constraintBottom_toBottomOf="@id/chevron"/>

    <ImageView
        android:id="@+id/chevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_chevron"
        android:backgroundTint="@color/textColor"
        android:rotation="90"
        android:layout_marginTop="50dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="16dp"
        android:text="Очистить"
        android:textColor="@color/mainColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_filter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_filter" />



</androidx.constraintlayout.widget.ConstraintLayout>