<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.basket.order.MakeOrderFragment"
    android:paddingHorizontal="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/FIO"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconTint="@color/white"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopStart="10dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:hint="ФИО"
            android:textColorHint="@color/textColor"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/city"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconTint="@color/white"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopStart="10dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white">
        <AutoCompleteTextView
            android:id="@+id/autoCompleteCity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/textColor"
            android:hint="Город" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinput_color"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconDrawable="@drawable/ic_chevron"
        app:endIconTint="@color/mainColor"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopStart="10dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/textColor"
            android:hint="Цвет" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinput_region"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconDrawable="@drawable/ic_chevron"
        app:endIconTint="@color/mainColor"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopStart="10dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteRegion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/textColor"
            android:hint="Регион" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/address"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconTint="@color/white"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopStart="10dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white">
        <AutoCompleteTextView
            android:id="@+id/autoCompleteAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/textColor"
            android:hint="Улица и номер дома" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/comments"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIconTint="@color/white"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopStart="10dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white">
        <AutoCompleteTextView
            android:id="@+id/autoCompleteComment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/textColor"
            android:hint="Комментарии"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/radio_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">
        <TextView
            android:id="@+id/option_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Способ оплаты"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@id/payme"
            app:layout_constraintTop_toBottomOf="@+id/option_payment"
            app:layout_constraintStart_toStartOf="@id/option_payment">
            <GridLayout
                android:id="@+id/radio_option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="3"
                android:columnCount="2"
                android:layout_marginTop="24dp"
                >
            <RadioButton
                android:id="@+id/payme"
                android:buttonTint="@color/mainColor"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="PayMe"/>
            <RadioButton
                android:id="@+id/click"
                android:buttonTint="@color/mainColor"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="Click.uz"/>
            <RadioButton
                android:id="@+id/xumo"
                android:buttonTint="@color/mainColor"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="Xumo"/>

            <RadioButton
                android:id="@+id/apelsin"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:buttonTint="@color/mainColor"
                android:text="Apelsin"/>
            <RadioButton
                android:id="@+id/oson"
                android:buttonTint="@color/mainColor"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:text="Oson"/>
            <RadioButton
                android:id="@+id/cash"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:buttonTint="@color/mainColor"
                android:text="Наличные"/>
    </GridLayout>
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <CheckBox
        android:id="@+id/agreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Согласен с условиями доставки"
        android:buttonTint="@color/mainColor"/>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_marginTop="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/cost_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:textSize="16sp"
        android:text="Стоимость"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/cost_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="225 000 сум"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/sale_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:textSize="16sp"
        android:text="Скидка"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/cost_text"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/sale_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="12%"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/cost_number"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/sale_promo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:textSize="16sp"
        android:text="Скидка по промокоду"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/sale_text"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/sale_promo_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="0%"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/sale_number"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/delivery_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:textSize="16sp"
        android:text="Доставка"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/sale_promo_text"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/delivery_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="15 000 сум"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/sale_promo_number"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/total_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Итого"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/delivery_text"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/total_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="245 000 сум"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/delivery_text"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/make_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Подтвердить заказ"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:background="@drawable/get_sms_button"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="34dp"/>

</LinearLayout>
</ScrollView>